<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="../css/graph.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js" defer></script>
  <title>Graphic</title>
</head>

<body>
  <div class="header">
    <a href="/home" class="logo">Game of Thrones</a>
    <div class="header-right">
    <a href="/home">Home</a>
      <a href="/search">Search</a>
      <a class="active" href="/grapic">Graphic</a>
      <a href="/interaction">Interaction</a>
    </div>
  </div>

  <div>
    <h2>TOP 10 Character Interaction Book 2</h2>
  </div>


  <div class="images">
    <img class="gambar" src="Book1.jpg" width="200" height="350">
    <img class="gambar" src="Book2.jpg" width="200" height="350">
    <img class="gambar" src="Book3.jpg" width="200" height="350">
    <img class="gambar" src="Book4.jpg" width="200" height="350">
    <img class="gambar" src="Book5.jpg" width="200" height="350">
  </div>

  <div class = "button">
    <button class="button-85" role="button"><a href="/graphic" style="text-decoration: none">Book 1</a></button>
    <button class="button-85" role="button"><a href="/graphic-book2" style="text-decoration: none">Book 2</a></button>
    <button class="button-85" role="button"><a href="/graphic-book3" style="text-decoration: none">Book 3</a></button>
    <button class="button-85" role="button"><a href="/graphic-book4" style="text-decoration: none">Book 4</a></button>
    <button class="button-85" role="button"><a href="/graphic-book5" style="text-decoration: none">Book 5</a></button>

  </div>

  <div class="chartManpro">
    <input type="hidden" id="label" name="label" value="<%=label %>">
    <input type="hidden" id="data" name="data" value="<%=data %>">
    <input type="hidden" id="judul" name="judul" value="<%=judul %>">
      <div class="chartCard">
        <div class="chartBox">
          <canvas id="myChart" width="400" height="100"></canvas>
        </div>
      </div>
      <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/chart.js"></script>
      <script>
      // setup 
      const data = {
        labels: JSON.parse(document.getElementById('label').value),
        datasets: [{
          label: document.getElementById('judul').value,
          data: JSON.parse(document.getElementById('data').value),
          backgroundColor:
            'rgba(0, 0, 0, 0.7)',
          borderColor: 
            'white',
          borderWidth: 1
        }]
      };
      // config 
      const config = {
        type: 'bar',
        data,
        options: {
          scales: {
            x: {
            ticks: {
              color: 'rgba(255,255,255, 0.9)'
            }
          },
            y: {
              beginAtZero: true,
              ticks: {
              color: 'rgba(255,255,255, 0.9)'
            }
            }
          }
        }
      };
      // render init block
      const myChart = new Chart(
        document.getElementById('myChart'),
        config
      );
      </script>
  </div>


</body>

</html>


